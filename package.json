{
  "author": "Girma Nigusse <xgirma@gmail.com> (https://github.com/xgirma)",
  "bugs": {
    "url": "https://github.com/e2e-boilerplates/utils/issues"
  },
  "dependencies": {
    "minimist": "1.2.0",
    "pino": "5.16.0",
    "pino-pretty": "3.6.0",
    "rimraf": "3.0.2"
  },
  "description": "Utils for automating the daily tasks of maintaining the e2e-boilerplate organization.",
  "devDependencies": {
    "@babel/core": "7.8.7",
    "@babel/plugin-transform-runtime": "7.8.3",
    "@babel/preset-env": "7.8.7",
    "@babel/runtime": "7.8.7",
    "babel-jest": "25.1.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-cypress": "2.10.3",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-json": "^2.1.0",
    "eslint-plugin-prettier": "3.1.2",
    "esm": "^3.2.25",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "lint-staged": "10.0.8",
    "prettier": "1.19.1",
    "ts-jest": "^25.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "boilerplate",
    "e2e",
    "e2e tests",
    "example",
    "integration test",
    "utils"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "name": "utils",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e2e-boilerplates/utils.git"
  },
  "scripts": {
    "lint": "npx eslint --ext .js ./ --fix",
    "test": "npx jest",
    "clean": "npx rimraf repos/*.json",
    "repos": "node -r esm repositories.js --pages 2 --username e2e-boilerplates",
    "clone": "node runner.js --task clone --username e2e-boilerplates",
    "deps": "node runner.js --task install --username e2e-boilerplates",
    "pull": "node runner.js --task pull --username e2e-boilerplates",
    "add": "node runner.js --task add --username e2e-boilerplates",
    "commit": "node runner.js --task commit --username e2e-boilerplates --message update",
    "push": "node runner.js --task push --username e2e-boilerplates",
    "metadata": "node runner.js --task metadata --username e2e-boilerplates",
    "command:execute": "node runner.js --task command --username e2e-boilerplates",
    "lint:repos": "node runner.js --task lint --username e2e-boilerplates"
  },
  "version": "1.0.0"
}
