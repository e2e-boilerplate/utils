{
  "name": "utils",
  "version": "1.0.0",
  "description": "Utils for automating the daily tasks of maintaining the e2e-boilerplate organization.",
  "scripts": {
    "lint": "npx eslint --ext .js ./ --fix",
    "clean": "npx rimraf repos/*.json",
    "repos": "node repositories.js --pages 9 --username e2e-boilerplates",
    "clone": "node runner.js --task clone --username papakpmartin",
    "deps": "node runner.js --task install --username e2e-boilerplates",
    "pull": "node runner.js --task pull --username e2e-boilerplates"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e2e-boilerplates/utils.git"
  },
  "keywords": [],
  "author": "Girma Nigusse <xgirma@gmail.com> (https://github.com/xgirma)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/e2e-boilerplates/utils/issues"
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-cypress": "2.10.3",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.3",
    "lint-staged": "10.0.7",
    "prettier": "1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "minimist": "1.2.0",
    "pino": "5.16.0",
    "pino-pretty": "3.6.0",
    "rimraf": "3.0.2"
  }
}
